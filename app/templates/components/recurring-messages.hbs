<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Message Id</th>
      <th>Type</th>
      <th>Timestamp</th>
      <th>Interval</th>
      <th>Last delivered</th>
      <th>Next delivery</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each messages as |msg|}}
      <tr>
        <td>{{msg.message.messageId}}</td>
        <td>{{msg.message.messageType}}</td>
        <td>{{moment-format msg.message.timestamp "lll"}}</td>
        <td>{{time-duration msg.message.deliverEveryMillis type='absolute'}}</td>
        <td>{{time-duration msg.prevAt}}</td>
        <td>{{time-duration msg.nextAt}}</td>
        <td>
          <a href="#" {{action onDelete msg}} title="Delete recurring message">
            {{fa-icon 'trash'}}
          </a>
          <a href="#" {{action onScheduleImmediately msg}} title="Schedule now!">
            {{fa-icon 'bolt'}}
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
